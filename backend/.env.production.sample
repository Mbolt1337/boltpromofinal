# ===========================================
# BoltPromo Backend - Production Environment
# ===========================================
# ВАЖНО: Это шаблон для продакшена
# 1. Скопируйте как .env
# 2. Заполните ВСЕ значения (никаких дефолтов!)
# 3. НИКОГДА не коммитьте .env в git!

# -------------------------------------------
# Django Core Settings (ОБЯЗАТЕЛЬНО)
# -------------------------------------------
# КРИТИЧНО: Должно быть False в продакшене!
DEBUG=False

# Генерация: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
# НИКОГДА не используйте дефолтное значение!
SECRET_KEY=

# Ваши домены (через запятую, БЕЗ http://)
# Пример: mydomain.ru,www.mydomain.ru,api.mydomain.ru
ALLOWED_HOSTS=

# -------------------------------------------
# PostgreSQL Database (ОБЯЗАТЕЛЬНО)
# -------------------------------------------
DB_NAME=boltpromo_prod
DB_USER=boltpromo_user
DB_PASSWORD=
DB_HOST=localhost
DB_PORT=5432

# -------------------------------------------
# Redis (ОБЯЗАТЕЛЬНО)
# -------------------------------------------
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# -------------------------------------------
# CORS & CSRF (ОБЯЗАТЕЛЬНО)
# -------------------------------------------
# Frontend URL для CORS (с https://)
CORS_ALLOWED_ORIGINS=https://yourdomain.ru,https://www.yourdomain.ru
CSRF_TRUSTED_ORIGINS=https://yourdomain.ru,https://www.yourdomain.ru

# -------------------------------------------
# Canonical Domain для SEO
# -------------------------------------------
CANONICAL_HOST=yourdomain.ru

# -------------------------------------------
# Email Settings (Опционально)
# -------------------------------------------
EMAIL_HOST=smtp.yandex.ru
EMAIL_PORT=587
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=noreply@yourdomain.ru

# -------------------------------------------
# Monitoring (Опционально)
# -------------------------------------------
# Sentry DSN для error tracking
SENTRY_DSN=

# -------------------------------------------
# Dev Tools (ДОЛЖНЫ БЫТЬ ВЫКЛЮЧЕНЫ)
# -------------------------------------------
ENABLE_SILK=False

# -------------------------------------------
# Static & Media (Опционально для CDN)
# -------------------------------------------
# Оставьте пустым если используете nginx
# STATIC_URL=https://cdn.yourdomain.ru/static/
# MEDIA_URL=https://cdn.yourdomain.ru/media/
