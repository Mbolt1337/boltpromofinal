# ===========================================
# BoltPromo Backend Environment Configuration
# ===========================================

# ВАЖНО: Скопируйте этот файл как .env и заполните все значения
# Никогда не коммитьте .env в git!

# -------------------------------------------
# Django Core Settings
# -------------------------------------------
DEBUG=False
SECRET_KEY=please-generate-strong-random-key-using-python-secrets

# Разрешённые хосты (через запятую, без пробелов)
# Пример: ALLOWED_HOSTS=boltpromo.ru,www.boltpromo.ru,api.boltpromo.ru
ALLOWED_HOSTS=localhost,127.0.0.1

# -------------------------------------------
# PostgreSQL Database (Production)
# -------------------------------------------
# При DEBUG=False автоматически используется PostgreSQL
DB_NAME=boltpromo
DB_USER=postgres
DB_PASSWORD=your-secure-database-password
DB_HOST=localhost
DB_PORT=5432

# -------------------------------------------
# Redis Cache & Celery
# -------------------------------------------
# Используется для кэширования и очередей задач
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# -------------------------------------------
# Sentry Error Monitoring (Опционально)
# -------------------------------------------
# Получить DSN: https://sentry.io/
SENTRY_DSN=

# -------------------------------------------
# Email Settings (для уведомлений)
# -------------------------------------------
EMAIL_HOST=smtp.yandex.ru
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=support@boltpromo.ru

# -------------------------------------------
# Silk Profiler (Development Only)
# -------------------------------------------
# Включить профилировщик запросов (только для отладки)
ENABLE_SILK=False

# -------------------------------------------
# Static & Media Files (Production)
# -------------------------------------------
# CDN URL для статических файлов (опционально)
# STATIC_URL=https://cdn.boltpromo.ru/static/
# MEDIA_URL=https://cdn.boltpromo.ru/media/
